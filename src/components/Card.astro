---
export interface Props {
  title: string;
  description: string;
  href: string;
}

const { title, description, href }: Props = Astro.props;
---

<a href={href} target="_blank" rel="noreferrer noopener" class="h-full">
  <div
    class="h-full border p-4 shadow-md hover:bg-slate-50 active:bg-slate-100 active:shadow-none"
  >
    <h3 class="text-2xl">{title}</h3>
    <p>{description}</p>
  </div>
</a>
